@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="card">
    <h1 class="card__header">Sign in with your email.</h1>
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="card__form-warning" role="alert"></div>
        <div class="card__form-group">
            <label asp-for="Input.Email" class="card__form-label">Email</label>
            <input asp-for="Input.Email" class="card__form-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="card__form-warning"></span>
        </div>
        <div class="card__form-group">
            <label asp-for="Input.Password" class="card__form-label">Password</label>
            <input asp-for="Input.Password" class="card__form-input" autocomplete="current-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.Password" class="card__form-warning"></span>
        </div>
        <div class="card__form-group">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <input type="submit" value="Log in" class="card__form-btn" />
    </form>
    <div class="card__link-group"></div>
        <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
