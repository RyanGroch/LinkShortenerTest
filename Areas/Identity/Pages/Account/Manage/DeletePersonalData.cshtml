@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h2 class="card__header card__header--small">@ViewData["Title"]</h2>

<p class="card__paragraph">
    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
</p>

<form id="delete-user" method="post">
    <div asp-validation-summary="ModelOnly" class="card__form-warning" role="alert"></div>
    @if (Model.RequirePassword)
    {
        <div class="card__form-group">
            <label asp-for="Input.Password" class="card__form-label"></label>
            <input asp-for="Input.Password" class="card__form-input" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
            <span asp-validation-for="Input.Password" class="card__form-warning"></span>
        </div>
    }
    <button class="card__form-btn card__form-btn--warning" type="submit">Delete data and close my account</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
