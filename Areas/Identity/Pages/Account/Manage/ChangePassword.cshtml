@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2 class="card__header card__header--small">Change your password.</h2>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="change-password-form" method="post">
    <div asp-validation-summary="ModelOnly" class="card__form-warning" role="alert"></div>
    <div class="card__form-group">
        <label asp-for="Input.OldPassword" class="card__form-label"></label>
        <input asp-for="Input.OldPassword" class="card__form-input" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
        <span asp-validation-for="Input.OldPassword" class="card__form-warning"></span>
    </div>
    <div class="card__form-group">
        <label asp-for="Input.NewPassword" class="card__form-label"></label>
        <input asp-for="Input.NewPassword" class="card__form-input" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
        <span asp-validation-for="Input.NewPassword" class="card__form-warning"></span>
    </div>
    <div class="card__form-group">
        <label asp-for="Input.ConfirmPassword" class="card__form-label"></label>
        <input asp-for="Input.ConfirmPassword" class="card__form-input" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password."/>
        <span asp-validation-for="Input.ConfirmPassword" class="card__form-warning"></span>
    </div>
    <input type="submit" value="Update password" class="card__form-btn" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
